
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- Cat's name -->
    <div class="row pedigree_row" style="height: 40px; margin-top:20px;">
        <div class="col-sm-10 text-center">
            <i>@ViewBag.pedigree.cat.name</i>
        </div>
    </div>

    <!-- Cat's Properties -->
    <div class="row pedigree_row" style="height: 70px">
        <div class="col-sm-4" style="font-size: 10px;">
            <b>Cor:</b>@ViewBag.pedigree.cat.color.description<br />
            <b>Raça:</b>@ViewBag.pedigree.cat.race.description<br />
            <b>Propietario:</b>@ViewBag.pedigree.cat.proprietary<br />
        </div>
        <div class="col-sm-4" style="font-size: 10px;">
            <b>Cor dos Olhos:</b>@ViewBag.pedigree.cat.eye.description<br />
            <b>Sexo:</b>@ViewBag.pedigree.cat.sex<br />
            <b>Criador:</b>@ViewBag.pedigree.cat.creator<br />
        </div>
        <div class="col-sm-4" style="font-size: 10px;">
            <b>Nascido em:</b>@ViewBag.pedigree.cat.birth_date.ToString("dd/MM/yyyy")<br />
            <b>Nº Pedigree:</b>@ViewBag.pedigree.cat.homologation<br />
